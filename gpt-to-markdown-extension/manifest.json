{
  "manifest_version": 3,
  "name": "GPT \u2192 Markdown Converter",
  "version": "1.0.0",
  "description": "Convert any GPT prompt into clean Markdown (.md) via popup or right-click.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "action": {
    "default_title": "GPT \u2192 Markdown",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "options.html"
}